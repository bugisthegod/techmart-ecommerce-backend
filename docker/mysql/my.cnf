# Custom MySQL configuration for development environment
# This file is mounted to /etc/mysql/conf.d/my.cnf in the container

[mysqld]
# Character set (important for international characters in product names, addresses)
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci

# Connection settings
max_connections=200
connect_timeout=10

# Buffer pool size (adjust based on available memory)
# For local dev with 1GB limit, use 512M
innodb_buffer_pool_size=512M

# Binary logging (disable for local dev to save disk space)
skip-log-bin

# Slow query log for debugging performance issues
slow_query_log=1
slow_query_log_file=/var/lib/mysql/slow-query.log
long_query_time=2

# Performance Schema (enabled for monitoring)
performance_schema=ON

# InnoDB settings for better performance
innodb_flush_log_at_trx_commit=2
innodb_flush_method=O_DIRECT
innodb_log_file_size=256M

# SQL Mode - strict mode for data integrity
sql_mode=STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

[client]
default-character-set=utf8mb4